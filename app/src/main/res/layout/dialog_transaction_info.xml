<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDialogReviewTransCategName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Test"
        android:textColor="@color/design_default_color_primary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDialogReviewTransCategTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/total"
        android:textColor="@color/design_default_color_primary_dark"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDialogReviewTransCategName"
        app:layout_constraintEnd_toEndOf="parent" />

    <ListView
        android:id="@+id/lvDialogShowTrans"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/item_date_plus"
        app:layout_constraintEnd_toEndOf="@+id/tvDialogReviewTransCategTotal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvDialogReviewTransCategName"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogReviewTransCategTotal" />

    <Button
        android:id="@+id/btnDialogTransYes"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lvDialogShowTrans"
        app:layout_constraintStart_toStartOf="@+id/lvDialogShowTrans"
        app:layout_constraintTop_toBottomOf="@+id/lvDialogShowTrans" />

</androidx.constraintlayout.widget.ConstraintLayout>